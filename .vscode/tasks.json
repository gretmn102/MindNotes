    "version": "2.0.0",
    "tasks": [
        {
            "label": "JustRun",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "fake",
                "build",
                "-t",
                "JustRun"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "JustBundle",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "fake",
                "build",
                "-t",
                "JustBundle"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "group": "build",
            "options": { "env": { "PAKET_SKIP_RESTORE_TARGETS": "true" } },
            "command": "dotnet",
            "args": [
                "fake",
                "build",
                "-t",
                "Build"
            ],
            "problemMatcher": []
        },
        {
            "label": "FullRun",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "fake",
                "build",
                "-t",
                "Run"
            ],
            "problemMatcher": []
        }
    ]
}